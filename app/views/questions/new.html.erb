<h1>Nouvelle question</h1>

<%= form_with(model: @question, url: questions_path, local: true) do |form| %>
  <div>
    <%= form.label :question %>
    <%= form.text_field :question %>
  </div>
  
  <div>
    <%= form.label :answer1 %>
    <%= form.text_field :answer1 %>
  </div>

  <div>
    <%= form.label :answer2 %>
    <%= form.text_field :answer2 %>
  </div>

  <div>
    <%= form.label :answer3 %>
    <%= form.text_field :answer3 %>
  </div>

  <div>
    <%= form.label :answer4 %>
    <%= form.text_field :answer4 %>
  </div>

  <div>
    <p>Select the correct answers:</p>
    <%= form.check_box :correct_answers_array, { multiple: true }, '1', nil %> 1
    <%= form.check_box :correct_answers_array, { multiple: true }, '2', nil %> 2
    <%= form.check_box :correct_answers_array, { multiple: true }, '3', nil %> 3
    <%= form.check_box :correct_answers_array, { multiple: true }, '4', nil %> 4
    <%= form.check_box :correct_answers_array, { multiple: true }, 'toutes', nil %> Toutes les r√©ponses
    <%= form.check_box :correct_answers_array, { multiple: true }, 'aucunes', nil %> Aucune
  </div>

  <%= form.submit %>
<% end %>